{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"problemMatcher": [
				"$tsc-watch",
				{
					"owner": "esbuild",
					"source": "esbuild",
					"fileLocation": "relative",
					"pattern": {
						"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
						"message": 1
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^\\[watch\\] build started",
						"endsPattern": "^\\[watch\\] build (finished|failed)"
					}
				}
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"label": "npm: watch"
		},
		{
			"type": "npm",
			"script": "compile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$tsc"],
			"label": "npm: compile"
		},
		{
			"type": "npm",
			"script": "package",
			"group": "build",
			"problemMatcher": ["$tsc"],
			"label": "npm: package - production build"
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": "$eslint-stylish",
			"label": "npm: lint"
		}
	]
}
